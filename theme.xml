<theme>

   <variables>
      <spacerImage>./_inc/images/space.png</spacerImage>
   </variables>

   <view name="system,gamelist">
      <image name="background">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>000000</color>
         <zIndex>0</zIndex>
      </image>
      <image name="mask">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/images/background.png</path>
         <zIndex>2</zIndex>
      </image>
      <textlist name="system-list,game-list">
         <origin>0 1</origin>
         <pos>0.05 0.84</pos>
         <size>0.9 0.09</size>
         <fontSize>0.07</fontSize>
         <lineSpacing>1</lineSpacing>
         <horizontalAlignment>left</horizontalAlignment>
         <selectedColor>ffffff</selectedColor>
         <selectorColor>00000000</selectorColor>
         <primaryColor>00000000</primaryColor>
         <secondaryColor>00000000</secondaryColor>
         <zIndex>100</zIndex>
      </textlist>
      <text name="system-info">
         <origin>0 1</origin>
         <pos>.05 .90</pos>
         <size>0 0.05</size>
         <fontSize>0.05</fontSize>
         <color>ffffff88</color>
         <backgroundColor>FF000000</backgroundColor>
         <zIndex>100</zIndex>
      </text>
      <helpsystem name="help">
         <origin>0 1</origin>
         <pos>0.05 0.95</pos>
         <fontSize>0.03</fontSize>
         <textColor>ffffff44</textColor>
         <iconColor>ffffff44</iconColor>
      </helpsystem>
      <video name="background-video">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <maxSize>1.4 2</maxSize>
         <delay>3</delay>
         <imageType>screenshot,fanart</imageType>
         <opacity>0.6</opacity>
         <zIndex>1</zIndex>
      </video>
   </view>

   <view name="system">
      <gameselector name="selector-random">
         <selection>random</selection>
      </gameselector>
      <textlist name="system-list">
         <letterCase>capitalize</letterCase>
      </textlist>
      <text name="system-info">
         <systemdata>gamecount</systemdata>
      </text>
      <video name="background-video">
         <gameselector>selector-random</gameselector>
      </video>
   </view>

   <view name="gamelist">
      <image name="cover-art">
         <origin>0 1</origin>
         <pos>0.05 0.74</pos>
         <maxSize>0.2 0.3</maxSize>
         <imageType>physicalmedia,cover,3dbox</imageType>
      </image>
      <textlist name="game-list"></textlist>
      <text name="system-info">
         <text>${system.fullName}</text>
         <letterCase>capitalize</letterCase>
      </text>
      <video name="background-video"></video>
   </view>

</theme>