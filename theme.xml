<theme>

   <variables>
      <boldFont>./_inc/fonts/RedHatDisplay-Bold.ttf</boldFont>
      <regularFont>./_inc/fonts/RedHatDisplay-Regular.ttf</regularFont>
      <spacerImage>./_inc/images/space.png</spacerImage>
   </variables>

   <view name="system,gamelist">
      <text name="system-name,auto-collection-name,custom-collection-name,game-name">
         <origin>0 1</origin>
         <pos>0.5234375 0.49</pos><!-- 670 50% -->
         <size>0.234375 0.208333333333333</size><!-- 300 150 -->
         <fontSize>0.044444444444444</fontSize><!-- 32 -->
         <color>111111</color>
         <fontPath>${boldFont}</fontPath>
         <zIndex>100</zIndex>
         <verticalAlignment>bottom</verticalAlignment>
         <lineSpacing>1</lineSpacing>
      </text>
      <image name="carousel-seperator">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <size>0.0015625 0.277777777777778</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>00000011</color>
         <zIndex>200</zIndex>
      </image>
      <text name="system-info,game-info">
         <origin>0 0</origin>
         <pos>0.5234375 0.49</pos><!-- 670 50% -->
         <size>0.234375 0.208333333333333</size><!-- 300 150 -->
         <fontSize>0.033333333333333</fontSize><!-- 24 -->
         <fontPath>${regularFont}</fontPath>
         <color>444444</color>
         <zIndex>100</zIndex>
         <verticalAlignment>top</verticalAlignment>
         <lineSpacing>1</lineSpacing>
      </text>
      <text name="auto-collection-name">
         <letterCase>capitalize</letterCase>
      </text>
      <helpsystem name="help">
         <origin>0.5 1</origin>
         <pos>0.5 0.94</pos>
         <fontSize>0.026</fontSize>
         <textColor>00000055</textColor>
         <iconColor>00000033</iconColor>
      </helpsystem>
   </view>

   <view name="system">
      <text name="system-name">
         <text>${system.fullName.noCollections}</text>
      </text>
      <text name="auto-collection-name">
         <text>${system.fullName.autoCollections}</text>
      </text>
      <text name="custom-collection-name">
         <text>${system.fullName.customCollections}</text>
      </text>
      <text name="system-info">
         <systemdata>gamecount</systemdata>
      </text>
      <carousel name="system-list">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <color>dddddd</color>
         <staticImage>./_inc/systems/${system.theme}.png</staticImage>
         <itemTransitions>instant</itemTransitions>
         <itemSize>0.2 0.4</itemSize><!-- 256 288  -->
         <itemScale>1</itemScale>
         <maxItemCount>4</maxItemCount>
         <selectedItemMargins>0 0.2</selectedItemMargins>
         <horizontalOffset>-0.1</horizontalOffset>
         <unfocusedItemOpacity>.3</unfocusedItemOpacity>
      </carousel>
   </view>

   <view name="gamelist">
      <text name="game-name">
         <metadata>name</metadata>
      </text>
      <text name="game-info">
         <metadata>systemFullname</metadata>
         <letterCase>capitalize</letterCase>
      </text>
      <carousel name="game-list">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <color>dddddd</color>
         <imageType>cover,physicalmedia,3dbox</imageType>
         <itemTransitions>instant</itemTransitions>
         <itemSize>0.2 0.4</itemSize><!-- 256 288  -->
         <itemScale>1</itemScale>
         <maxItemCount>4</maxItemCount>
         <selectedItemMargins>0 0.2</selectedItemMargins>
         <horizontalOffset>-0.1</horizontalOffset>
         <unfocusedItemOpacity>.3</unfocusedItemOpacity>
      </carousel>
   </view>

</theme>